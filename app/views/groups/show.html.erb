<div class="mt-4 container text-center">
    <h1><%= @group["name"] %></h1><hr/>

    <div class="alert alert-secondary" role="alert">
        <h1>Dues</h1>
        <% find_user(@group).each do |u| %>
            <h4 class="alert-heading"><%= u["email"]%>
            <% if find_expense(u["id"]).first["amount"] != nil %>
                <% if find_expense(u["id"]).first["amount"] < 0 %>
                    <span class="text-danger"> owes $<%= find_expense(u["id"]).first["amount"].abs() %>.</span> 
                <% elsif find_expense(u["id"]).first["amount"] > 0 %>
                    <span class="text-success"> has to receive $<%= find_expense(u["id"]).first["amount"].abs() %>.</span> 
                <% else %>
                    <span> is all settled up.</span> 
                <% end %>
            <% else %>
                <span> is all settled up.</span> 
            <% end %>
            
            </h4>
            <hr> 
        <% end %>
    </div>
</div>